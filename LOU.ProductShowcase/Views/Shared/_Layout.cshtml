@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LOU's Products Showcase</title>

    <!-- ✅ Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- ✅ Local Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LOU.ProductShowcase.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- 🍁 Maple Leaves Background Animation -->
    <div class="leaf-container">
        <div class="leaf" style="left: 10%; animation-duration: 12s;">🍁</div>
        <div class="leaf" style="left: 25%; animation-duration: 10s; font-size: 2rem;">🍁</div>
        <div class="leaf" style="left: 45%; animation-duration: 14s;">🍁</div>
        <div class="leaf" style="left: 65%; animation-duration: 11s; font-size: 1.2rem;">🍁</div>
        <div class="leaf" style="left: 85%; animation-duration: 13s;">🍁</div>
    </div>

    <!-- 🔝 Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom shadow-sm mb-2">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">📦 Product Showcase</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btn-outline-secondary nav-btn me-2" asp-area="" asp-controller="Home" asp-action="Index">🏠 Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-secondary nav-btn" asp-area="" asp-controller="Home" asp-action="Privacy">🔐 Privacy</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Products" asp-action="Index">🔧 Admin Dashboard</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="form-inline">
                                    <button type="submit" class="nav-link btn btn-link text-danger border-0">🔓 Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-success" asp-area="Identity" asp-page="/Account/Login">🔐 Admin Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ Animated Main Content -->
    <div class="container intro-container pt-4 pb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
