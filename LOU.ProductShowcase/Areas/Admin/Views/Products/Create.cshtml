@model LOU.ProductShowcase.Models.Product

@{
    ViewData["Title"] = "Add Product";
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
}

<div class="container admin-container mt-5">
    <h2 class="mb-4">➕ Add Product</h2>

    <form asp-action="Create" enctype="multipart/form-data" class="border rounded p-4 shadow-sm bg-light">
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger small"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Stock" class="form-label"></label>
            <input asp-for="Stock" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger small"></span>
        </div>

        <!-- ✅ Category Dropdown -->
        <div class="form-group mb-3">
            <label asp-for="Category" class="form-label"></label>
            <select asp-for="Category" class="form-select">
                <option value="">-- Select Category --</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat">@cat</option>
                }
            </select>
            <span asp-validation-for="Category" class="text-danger small"></span>
        </div>

        <div class="form-group mb-4">
            <label class="form-label">Product Image</label>
            <input type="file" name="Image" class="form-control" />
        </div>

        <button type="submit" class="btn btn-outline-success px-4">✅ Save Product</button>
    </form>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</div>
